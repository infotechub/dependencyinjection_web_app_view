@{
    ViewData["Title"] = "Home Page";
}

@inject DependencyInjection.Services.EmployeeService employee

@if (employee.GetAllEmployeeDetails().Any())
{
    <table class='table' style="background-color:#FFFFFF; border:2px #6D7B8D; padding:5px; width:99%; table-layout:fixed;" cellpadding="2" cellspacing="2">
        <tr style="height: 30px; background-color:#336699 ; color:#FFFFFF; border: solid 1px #659EC7;">
            <td align="center">
                Employee Name
            </td>
            <td align="center">
                Department
            </td>
            <td align="center">
                Qualification
            </td>
            <td align="center">
                Position
            </td>
            <td align="center">
                Gross Pay
            </td>
            <td align="center">
                Tax
            </td>
            <td align="center">
                Net Pay
            </td>
        </tr>
        @foreach (var emp in employee.GetAllEmployeeDetails().OrderBy(x => x.EmployeeName))
        {
        <tr>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color: #9F000F">
                    @emp.EmployeeName
                </span>
            </td>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color:#9F000F">
                    @emp.Department
                </span>
            </td>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color:#9F000F">
                    @emp.Qualification
                </span>
            </td>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color:#9F000F">
                    @emp.Position
                </span>
            </td>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color:#9F000F">
                    @emp.Salary
                </span>
            </td>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color:#9F000F">
                    @emp.Tax
                </span>
            </td>
            <td align="center" style="border: solid 1px #659EC7; padding: 5px;table-layout:fixed;">
                <span style="color:#9F000F">
                    @emp.NetPay
                </span>
            </td>

        </tr>
        }
    </table>
}  